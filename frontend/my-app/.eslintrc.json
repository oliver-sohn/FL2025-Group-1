{
  "parser": "espree", // default ESLint parser
  "extends": ["airbnb", "airbnb/hooks", "prettier"],
  "plugins": ["react", "jsx-a11y", "import", "prettier"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    // i added this because even though I've download the packages properly, I'm still getting errors about the no-extranious dependencies
    "import/no-extraneous-dependencies": "off",
    "no-console": "off"
  },
  "settings": {
    "react": { "version": "detect" }
  }
}
